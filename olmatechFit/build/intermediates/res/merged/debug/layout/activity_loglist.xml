<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dlgContainer"  >
 <TextView android:id="@+id/txtTitle"
        style="@style/dlgMenuTitle"
        android:text="@string/log" /> 
 <ImageView android:id="@+id/common_small_close"
 	style="@style/closeButton" />
  <ListView android:id="@+id/list_log"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtTitle"    
        android:layout_above="@+id/but_delete_last"    
        android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false"
        android:paddingTop="@dimen/list_pad_top_bot"
        android:paddingBottom="@dimen/list_pad_top_bot"
        android:divider = "@android:color/transparent"
        android:dividerHeight ="6dp"
		android:listSelector="@android:color/transparent" 
		android:layout_marginTop="@dimen/margin_top_bot"  android:layout_marginBottom="@dimen/margin_top_bot" /> 
   <ProgressBar android:id="@+id/progrBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true" />    
  <com.olmatech.fitness.controls.AppButton android:id="@+id/but_delete_last"
	    style="@style/blueButton"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/but_close" 
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:text="@string/remove_last_rep" />
 <com.olmatech.fitness.controls.AppButton android:id="@+id/but_close"
	    style="@style/blueButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:text="@string/close" />
 </RelativeLayout>
