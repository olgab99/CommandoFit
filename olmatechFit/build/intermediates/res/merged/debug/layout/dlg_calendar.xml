<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="10dp"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical" >
    <TextView android:id="@+id/month_title"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="@dimen/margin_top_bot"
	     android:layout_marginBottom="@dimen/margin_top_bot"
	     android:layout_alignParentLeft="true"
	     android:gravity="left|bottom"	    
	     android:text="SEP 2013"
	     android:textAppearance="@style/formTitleText"  />   
    <com.olmatech.fitness.controls.AppButton android:id="@+id/but_date_change"
	  style="@style/blueButtonGeneric" 
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
	  android:onClick="onButtonClick"  	
	  android:textAllCaps="true"	  
	  android:text="@string/change_date" /> 
 <!-- Filter -->
  <TextView android:id="@+id/cal_title_filter"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"  
	     android:layout_marginTop="@dimen/margin_top_bot"   
	     android:layout_marginBottom="@dimen/margin_top_bot"
	     android:layout_marginRight="10dp"
	     android:layout_below="@+id/month_title"
	     android:layout_alignParentLeft="true"
	     android:layout_alignTop="@+id/log_mode_select"
	     android:layout_alignBottom="@+id/log_mode_select"
	     android:gravity="center_vertical|left"
	     android:textAllCaps="true"
	     android:text="@string/filter"
	     android:textAppearance="@style/formText" />
 <Spinner android:id="@+id/log_mode_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/log_modes_arrays"
        android:prompt="@string/calendar_prompt"
        android:layout_below="@+id/month_title"
        android:layout_marginTop="@dimen/margin_top_bot"   
        android:layout_toRightOf="@+id/cal_title_filter" />   
  <GridView android:id="@+id/calendar"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:numColumns="7"
     android:gravity="center_horizontal"
     android:focusable="false"
     android:focusableInTouchMode="false"
     android:layout_above="@+id/bot_container"
     android:layout_below="@+id/log_mode_select" >     
 </GridView>
<LinearLayout android:id="@+id/bot_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:layout_above="@+id/bottomFragment"
       android:orientation="horizontal"
       android:layout_marginBottom="6dp"      
       android:weightSum="1" >
   <CheckBox
       android:id="@+id/cb_scheduler"
       style="@style/checkBx"      
       android:layout_weight="0.6"    
       android:onClick="onButtonClick"        
       android:text="@string/show_shed" />
  <com.olmatech.fitness.controls.AppButton android:id="@+id/but_close"
	  style="@style/blueButtonGeneric" 
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
	  android:onClick="onButtonClick"   
	  android:textAllCaps="true"
	  android:layout_weight="0.4"	  
	  android:text="@string/close" />  
  </LinearLayout>
  <fragment android:name="com.olmatech.fitness.view.BottomFragment"
        android:id="@+id/bottomFragment"
       style="@style/bottomBar" />   
</RelativeLayout>
