<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical" >
  <TextView android:id="@+id/txt_title"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"     
	     android:layout_marginBottom="10dp"	     
	     android:gravity="center_horizontal"
	     android:text=""
	     android:textAppearance="@style/formText" /> 
	 <com.olmatech.fitness.controls.AppButton android:id="@+id/but_one"	    
	     style="@style/blueButton" 
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:layout_marginBottom="10dp"
	     android:text="@string/ok_but" />  	
      <com.olmatech.fitness.controls.AppButton android:id="@+id/but_two"
	     style="@style/blueButton" 	 
	     android:onClick="onButtonClick"    
	     android:textAllCaps="true"
	     android:layout_marginBottom="10dp"		    
	     android:text="@string/ok_but" />  
      <com.olmatech.fitness.controls.AppButton android:id="@+id/but_three"
         style="@style/blueButton" 
          android:layout_marginBottom="10dp"   
          android:onClick="onButtonClick"      
          android:text="@string/cancel_but"
          android:textAllCaps="true" />  		
</LinearLayout>
