<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cal_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"    
    android:background="@drawable/bg_calendar_day" >
    <TextView android:id="@+id/day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:text="22"
  	   android:textStyle="bold"
  	   android:textSize="18sp"
  	   android:textColor="@color/txt_dark"
  	   android:gravity="center" />
     <ImageView
         android:id="@+id/img_doc"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"   
         android:layout_marginTop="4dp"      
         android:layout_marginRight="4dp"      
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/doc" />
    <TextView
        android:id="@+id/txt_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_number"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:scrollHorizontally="true"
        android:text="Block 2"
        android:textColor="@color/txt_dark"
        android:textSize="@dimen/cal_item"
        android:textStyle="bold" />

	<TextView
	    android:id="@+id/txt_day"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txt_block"
	    android:layout_centerHorizontal="true"
	    android:ellipsize="end"
	    android:gravity="center"
	    android:maxLines="1"
	    android:paddingLeft="2dp"
	    android:paddingRight="2dp"
	    android:scrollHorizontally="true"
	    android:text="Day 3"
	    android:textColor="@color/txt_dark"
	    android:textSize="@dimen/cal_item"
	    android:textStyle="bold" />

</RelativeLayout>
