<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dlgContainer" >    
<ImageView android:id="@+id/common_small_close"
 	style="@style/closeButton" />
<WebView android:id="@+id/help_wv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/common_small_close"
      android:layout_above="@+id/bot_container"
      android:background="#2A2B2B"
      android:paddingBottom="10dp"      
      android:paddingRight="2dp"
      android:layout_marginTop="10dp"
      android:scrollbarStyle="outsideOverlay"
      android:scrollbars="vertical" />
<RelativeLayout android:id="@+id/bot_container"
     android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true" >
	<ImageView
	    android:id="@+id/help_email"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_marginRight="10dp"
	    android:layout_toLeftOf="@+id/help_contact"
	    android:adjustViewBounds="true"
	    android:onClick="onButtonClick"
	    android:scaleType="fitCenter"
	    android:src="@drawable/email" />		<TextView
	    android:id="@+id/help_contact"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:layout_alignParentTop="true"
	    android:layout_alignTop="@+id/help_email"
	    android:layout_alignBottom="@+id/help_email"
	    android:gravity="right|center_vertical"
	    android:text="@string/email_us"
	    android:textAppearance="@style/formText" />
	<ImageView  android:id="@+id/help_logo"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_marginLeft="10dp"
	     android:layout_alignParentLeft="true"
	    android:adjustViewBounds="true"
	    android:onClick="onButtonClick"
	    android:scaleType="fitCenter"
	    android:src="@drawable/edit" />
  <TextView
	    android:id="@+id/help_about"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	   
	    android:layout_marginLeft="10dp"
	     android:layout_toRightOf="@+id/help_logo"
	    android:layout_alignParentTop="true"
	    android:layout_alignTop="@+id/help_email"
	    android:layout_alignBottom="@+id/help_email"
	    android:gravity="left|center_vertical"
	    android:text="@string/about"
	    android:textAppearance="@style/formText" />
<com.olmatech.fitness.controls.AppButton android:id="@+id/help_but_close"
       style="@style/blueButton"
	    android:textAllCaps="true" 
	    android:layout_centerHorizontal="true"	    
	    android:layout_below="@+id/help_email"
	    android:onClick="onButtonClick"
	    android:text="@string/close" />
</RelativeLayout>
</RelativeLayout>
