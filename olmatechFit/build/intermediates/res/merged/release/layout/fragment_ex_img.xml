<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cont_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/desc_img_bg" >
       <!-- main image -->
    <ImageView
        android:id="@+id/eximg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />    
    <!-- description button -->
    <ImageView
        android:id="@+id/but_descript"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/corner_open" />
    <!-- Ex number text -->
    <TextView android:id="@+id/txt_ex_number"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/timer_bg"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="10"
        android:textColor="@color/lt_gray"
        android:textSize="40sp"
        android:textStyle="bold" />
     <!--  Completed image -->
    <ImageView
        android:id="@+id/img_ex_done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/txt_ex_number"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/tic" />
    <!--  Completed image 
    <ImageView android:id="@+id/img_ex_done"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/txt_ex_number"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="10dp"
         android:scaleType="fitXY"
         android:adjustViewBounds="true"
         android:src="@drawable/tic" /> -->
    <!-- timer -->
    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/timer_bg"
        android:gravity="center_vertical|center_horizontal"
        android:text="1:00"
        android:textColor="#FF0000"
        android:textSize="40sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/butTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_timer"
         android:layout_alignRight="@+id/txt_timer"
         android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/timer" />
    <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/txt_timer"
         android:layout_alignRight="@+id/txt_timer"
         android:layout_alignBottom="@+id/txt_timer"
         android:gravity="bottom|center_horizontal"
         android:text="@string/rest"
         android:textColor="@color/lt_gray"
         android:textSize="10sp"
         android:textStyle="bold"
        />
   <!-- Navigation arrows -->
   <ImageView android:id="@+id/img_arr_left"
       android:layout_width="20dp"
       android:layout_height="62dp"
       android:adjustViewBounds="true"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:scaleType="fitXY"
       android:src="@drawable/arrow_l"  />
    <ImageView android:id="@+id/img_arr_up"
        android:layout_height="20dp"
       android:layout_width="62dp"       
       android:adjustViewBounds="true"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:scaleType="fitXY"
       android:src="@drawable/arrow_u"  />
    <ImageView android:id="@+id/img_arr_right"
       android:layout_width="20dp"
       android:layout_height="62dp"
       android:adjustViewBounds="true"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:scaleType="fitXY"
       android:src="@drawable/arrow_r"  />
    <ImageView android:id="@+id/img_arr_down"
        android:layout_height="20dp"
       android:layout_width="62dp"       
       android:adjustViewBounds="true"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:scaleType="fitXY"
       android:src="@drawable/arrow_d"  />
 </RelativeLayout>