<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout 
    style="@style/dlgContainer">
    <ImageView android:id="@+id/common_small_close"
 	style="@style/closeButton" />
    <ImageView  android:id="@+id/common_but_help" 
	    style="@style/helpButton" />
    <ProgressBar android:id="@+id/progrBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true" /> 
	<LinearLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@+id/common_small_close"
	    android:layout_marginTop="6dp"
	    android:padding="10dp"	    
	    android:layout_centerHorizontal="true" >	 
	 <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_interview"
	     style="@style/menuButton"
	     android:onClick="onButtonClick" 
	     android:textAllCaps="true"
	     android:text="@string/interview" 
	     android:drawableLeft="@drawable/menu_person" />
	 <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_settings"
	     style="@style/menuButton"
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/but_settings" android:drawableLeft="@drawable/menu_settings" /> 	
 <!--  
	 <com.olmatech.fitness.controls.AppButton android:id="@+id/menu_but_wheel"        
        style="@style/menuButton"              
	    android:textAllCaps="true" 
	    android:onClick="onButtonClick"
	    android:text="@string/advanced"  android:drawableLeft="@drawable/menu_weight_edit" /> --> 
	  <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_logs"
	     style="@style/menuButton" 
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/logs"  android:drawableLeft="@drawable/menu_calendar" /> 
	  <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_resetlog"
	     style="@style/menuButton"  
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/reset_workout_log" android:drawableLeft="@drawable/menu_reset_log" />
	   <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_resetprogr"
	     style="@style/menuButton"  
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/reset_progr" android:drawableLeft="@drawable/menu_reset_progr"  />
	   <!--  max rep -->
	    <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_resetmaxrep"
	     style="@style/menuButton"   
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/reset_maxrep" android:drawableLeft="@drawable/menu_remove_weights_all"/>
	    <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_resetmaxrep_cur"
	     style="@style/menuButton"   
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/reset_maxrep_cur" android:drawableLeft="@drawable/menu_remove_weights"/>
	   <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_dellogs"
	     style="@style/menuButton"  
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/delete_logs" android:drawableLeft="@drawable/menu_del_all_logs" />
	   <!--  music -->
	   <LinearLayout android:id="@+id/cont_music"
	       android:layout_width="match_parent" 
	       android:layout_height="wrap_content"
	       android:background="@drawable/blue_but_off"
	       android:weightSum="1.0"
	       android:orientation="horizontal" >
	   <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_music"
	     style="@style/menuButtonGeneric" 
	     android:layout_width="0dp"
	     android:layout_gravity="center_vertical"
	     android:layout_weight="0.9" 
	     android:layout_marginRight="4dp"
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/music" android:drawableLeft="@drawable/menu_music" /> 
<!--    <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_sound"
	     style="@style/menuButtonGeneric" 
	     android:layout_width="0dp"
	     android:layout_weight="0.5" 
	     android:layout_marginLeft="4dp"
	     android:layout_gravity="center_vertical"
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/stop" android:drawableLeft="@drawable/menu_sound" />  -->
	  </LinearLayout>
	  <!--<com.olmatech.fitness.controls.AppButton-->
	     <!--android:id="@+id/menu_but_facebook"-->
	    <!--style="@style/menuButton"  -->
	     <!--android:onClick="onButtonClick"   -->
	     <!--android:textAllCaps="true"-->
	     <!--android:text="@string/post_facebook" android:drawableLeft="@drawable/menu_fb_icon" />-->
	 <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_finish_workout"
	     style="@style/menuButton"   
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/but_finish"  android:drawableLeft="@drawable/menu_finish_go_home" />
	 <com.olmatech.fitness.controls.AppButton
	     android:id="@+id/menu_but_close"
	     style="@style/menuButton"  
	     android:onClick="onButtonClick"   
	     android:textAllCaps="true"
	     android:text="@string/close" android:drawableLeft="@drawable/menu_close_but" />  
	</LinearLayout>
</RelativeLayout>
</ScrollView>