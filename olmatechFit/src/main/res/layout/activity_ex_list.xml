<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dlgContainer"  >
 <TextView android:id="@+id/txtTitle"
        style="@style/dlgMenuTitle"
        android:text="@string/ex_list" />
 <fragment
     android:id="@+id/exListFragment"
     android:name="com.olmatech.fitness.view.ExListFragment"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/txtTitle"
     android:layout_above="@+id/butExListClose"
     android:layout_margin="6dp"
     android:layout_marginRight="40dp"
     android:layout_marginLeft="40dp" />    
 <ProgressBar android:id="@+id/progrBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true" /> 
<com.olmatech.fitness.controls.AppButton android:id="@+id/butExListClose"
	    style="@style/blueButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/close"
       android:textAllCaps="true"  />        
</RelativeLayout>
